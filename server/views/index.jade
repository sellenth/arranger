extends layout

block content
  script(src="/socket.io/socket.io.js")
  script(type="module" src="/javascripts/sock-share.js")

  div(class='wrapper' id='drawer')
    img(src='/images/field.png' width='793' height='363')
    canvas(id='signature-pad' width="793" height="363")
  button(id="save_btn") save

  div(id='plotter')
    div(class='wrapper')
      img(src='/images/field.png' width='793' height='363')
      canvas(id='myCanvas' width='793px' height='363px')

    div(class='slidecontainer')
      input(type="range" min="1" max="50" value="10" class="slider" id="size")
      input(type="range" min="1" max="10" value="1" class="slider" id="marchers")
      p(id="m_num") Number of marchers: 
    button(id="back_btn") Back

  script(type="module" src="/javascripts/point-plot.js")


